# White-label branding configuration
# Copy this file to .env.local and adjust values for your brand

# App branding
NEXT_PUBLIC_APP_NAME=MyAI
NEXT_PUBLIC_APP_DESCRIPTION=Your personal AI assistant for getting work done
NEXT_PUBLIC_APP_URL=https://myai.com

# Company branding
NEXT_PUBLIC_COMPANY_NAME=MyCompany
NEXT_PUBLIC_TEAM_NAME=MyCompany Team
NEXT_PUBLIC_COMPANY_URL=https://mycompany.com
NEXT_PUBLIC_CONTACT_EMAIL=hello@mycompany.com
NEXT_PUBLIC_SUPPORT_EMAIL=support@myai.com
NEXT_PUBLIC_CAREERS_URL=https://mycompany.com/careers

# Logo paths (place your logos in public folder)
NEXT_PUBLIC_LOGO_LIGHT=/my-logo-light.svg
NEXT_PUBLIC_LOGO_DARK=/my-logo-dark.svg
NEXT_PUBLIC_FAVICON=/my-favicon.ico

# Social links
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/mycompany
NEXT_PUBLIC_GITHUB_URL=https://github.com/mycompany/myai
NEXT_PUBLIC_DISCORD_URL=https://discord.gg/mycompany
NEXT_PUBLIC_LINKEDIN_URL=https://www.linkedin.com/company/mycompany/
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/mycompany

# Legal pages
NEXT_PUBLIC_PRIVACY_URL=https://myai.com/privacy
NEXT_PUBLIC_TERMS_URL=https://myai.com/terms
NEXT_PUBLIC_LICENSE_URL=https://github.com/mycompany/myai/blob/main/LICENSE

# Feature flags
NEXT_PUBLIC_SHOW_POWERED_BY=false  # Hide "Powered by" text
NEXT_PUBLIC_ALLOW_SIGNUP=true      # Allow new user signups
NEXT_PUBLIC_SHOW_PRICING=true      # Show pricing page

# Calendar/Demo booking
NEXT_PUBLIC_CALENDAR_LINK=team/mycompany/demo

# Admin API Key (for sending welcome emails, etc)
ADMIN_API_KEY=your-secure-admin-api-key

